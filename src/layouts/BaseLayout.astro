---
import "../styles/global.css";
import Header from "../components/global/Header.astro";

const { title = "Paragon Sciences" } = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-white text-[color:var(--paragon-black)]">
		<Header />
		<main class="mx-auto w-full max-w-screen-xl px-6 py-12">
			<slot />
		</main>
	</body>
</html>
